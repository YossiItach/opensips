#!/sbin/sh
# Script for checking prerequisites for OpeSIPS-pgsql

BASE="OpenSIPS-base"
LIBMYSQL="libpq.so.5"
TMPLIST="/tmp/.opensipspgsql"

pkginfo | grep -i $BASE > /dev/null

if [ $? -eq 1 ]
then
        echo "OpenSIPS-pgsql depends on package OpenSIPS-base and it is not installed";
        exit 1;
fi

find / -name $LIBMYSQL > $TMPLIST 2>&1
lines=`wc -l $TMPLIST`

if [ $lines = "0" ]
then
        echo "OpenSIPS-pgsql depends on PostgreSQL Client Libraries, which cannot be found on system";
        exit 1;
else
        exit 0;
fi

